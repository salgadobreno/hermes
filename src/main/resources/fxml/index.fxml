                        <Bloom />
                     </effect></Separator>
                  <Button layoutX="382.0" layoutY="137.0" mnemonicParsing="false" onAction="#gerarQr" text="Ver" />
                  <Label layoutX="14.0" layoutY="117.0" text="Content" />
